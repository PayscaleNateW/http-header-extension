{
  "manifest_version": 2,

  "name": "HTTP Headers",
  "description": "This extension shows HTTP headers without spamming you.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["getHeaders.js"],
    "persistent": true
  },
  "permissions": [
    "<all_urls>","webRequest","webRequestBlocking"
  ]
}
